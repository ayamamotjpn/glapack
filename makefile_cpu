include make.inc_cpu

ARC = 86
OBJD = obj_$(ARC)
BIND = bin_$(ARC)
CUD = $(shell pwd)

#swp_band2d_g : $(PRG)

FSRC = glapack.f90

OBJ = $(OBJD)/glapack.o

#all : lib/libglapack.so lib/libgblas.so
all : lib/libglapack_cpu.so
#all : lib/libglapack_cpu.dylib

lib/libglapack_cpu.so : $(OBJ)	
	$(F90) $(SHARED) $(LIB) $^ -o $@ # for cpu version

#lib/libglapack_cpu.dylib : $(OBJ)	
#	$(F90) $(SHARED) $(LIB) $^ -o $@ # for cpu version

lib/libgblas_cpu.so : $(OBJD)/fortran.o
	$(CC) $(SHARED) $(LIB) $< -o $@

#lib/libgblas_cpu.dylib : $(OBJD)/fortran.o
#	$(CC) $(SHARED) $(LIB) $< -o $@

$(OBJD)/cublasXt.o : cublasXt.f90
	$(F90) $(FCOPT) $(INC) $< -o $@
	
$(OBJD)/glapack.o : $(MKLBLAS) glapack.f90
	$(F90) $(FCOPT) $(INC) $< -o $@

$(OBJD)/mkl_blas.o : $(MKLBLAS)
	$(F90) $(FCOPT) $(INC) $< -o $@

$(OBJD)/fortran.o : $(CUDAFRT)/fortran.c
	$(CC) $(CCOPT) $(CRDAINC) -DCUBLAS_GFORTRAN $< -o $@

install :
	cp lib/libglapack_cpu.so $(INSTLIBDIR)
	cp $(JDIR)/glapack.mod $(INSTINCDIR)


depend .depend :
ifeq ($(VER),GPU)
	makedepf90 -b $(OBJD) -DMAGMA $(FSRC)  > .depend
else
	makedepf90 -b $(OBJD) $(FSRC)  > .depend
endif

#clean :
#	rm -f libglapack_*.so libgblas_*.so $(OBJD)/*.mod *.mod $(OBJ)

clean :
	rm -f lib/libglapack_cpu.so lib/libglapack_cpu.dylib $(OBJD)/*.mod *.mod $(OBJ)

include .depend
